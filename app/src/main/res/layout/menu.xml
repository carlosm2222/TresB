<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fdope.tresb.MapsActivity"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="61dp"
            android:layout_height="54dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/floatingActionButton"
            app:backgroundTint="?android:attr/colorPrimary"
            android:layout_row="3"
            android:layout_column="16"
            android:onClick="formulario"
            android:layout_marginEnd="28dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_rotate"
            android:id="@+id/floatingActionButton2"
            app:backgroundTint="?android:attr/colorPrimary"
            android:onClick="manualRefresh"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/floatingActionButton"
            android:layout_marginEnd="19dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="61dp"
            android:layout_height="54dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:id="@+id/floatingActionButton3"
            app:backgroundTint="?android:attr/colorPrimary"
            android:layout_marginStart="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@mipmap/logout"
            android:layout_alignParentBottom="true"
            app:backgroundTint="?android:attr/colorPrimary"
            android:layout_toEndOf="@+id/floatingActionButton3"
            android:layout_marginStart="22dp"
            android:id="@+id/floatingActionButton4"
            android:onClick="logout"/>

    </RelativeLayout>

</LinearLayout>