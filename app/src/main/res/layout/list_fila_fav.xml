<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ventana_favoritos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/wallet_bright_foreground_holo_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/img"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="90dp"
            android:layout_height="120dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/precio"
            android:layout_below="@+id/titulo"
            android:layout_alignStart="@+id/titulo"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            android:textAppearance="@android:style/TextAppearance.Material.Body1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tienda"
            android:layout_below="@+id/precio"
            android:layout_alignStart="@+id/precio"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usuario"
            android:layout_alignBottom="@+id/img"
            android:layout_alignStart="@+id/tienda" />

        <Button
            android:text="Eliminar"
            android:id="@+id/botonElimiarFav"
            style="@style/com_facebook_button"
            android:layout_width="67dp"
            android:layout_height="25dp"
            android:layout_above="@+id/tienda"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
